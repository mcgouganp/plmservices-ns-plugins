<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:outlineLabel="@plmservices/nativescript-outline-label" backgroundColor="white" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="nativescript-outline-label" icon="" class="action-bar">
          <outlineLabel:OutlineLabel text="Outline Label Demo" outline="4 black" />
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <outlineLabel:OutlineLabel text="CSS on Element" />
            <outlineLabel:OutlineLabel text="CSS on ID" id="outline" />
            <outlineLabel:OutlineLabel text="Outline in attribute" outline="4 red" />
            <outlineLabel:OutlineLabel text="Outline in style" style="outline: 4 green" />
            <outlineLabel:OutlineLabel text="Outline in class" class="outline" />
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>
